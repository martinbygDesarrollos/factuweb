<div class="modal fade " id="modalInsertNewPaymentMethod" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div id="modalInsertNewPaymentMethodColor" class="modal-header background-template-color">
                <span id="modalInsertNewPaymentMethodTitle" class="modal-title text-template-color"> Insertar nuevo método de pago</span>
                {# <button type="button" class="close" data-dismiss="modal" accesskey="x" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button> #}
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col">
                        <select id="modalInsertNewPaymentMethodOptions" size="12" class="custom-select custom-select-sm shadow-sm" onkeypress="keyPressSetPayment(event, null, null)" tabindex="1">
                            <option value="Efectivo">Efectivo</option>
                            <option value="Tarjeta">Tarjeta</option>
                            <option value="Tarjeta Offline">Tarjeta OFFLINE</option>
                            <option value="Cheque">Cheque</option>
                            <option value="Giro">Giro</option>
                            <option value="Depósito">Depósito</option>
                            <option value="Vale">Vale</option>
                            <option value="Pendiente">Pendiente</option>
                            <option value="Resguardo de IVA">Resguardo de IVA</option>
                            <option value="Certificado de Crédito">Certificado de Crédito</option>
                            <option value="Orden de Compra">Orden de Compra</option>
                            <option value="Otros">Otros</option>
                        </select>
                    </div>
                    <div class="col">
                        <input class="form-control form-control-sm text-right" type="float" id="modalInsertNewPaymentMethodAmount" onkeypress="keyPressSetPayment(event, null, null)" tabindex="2">
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                {# <button id="modalInsertNewPaymentMethodButtonCancel" type="button" class="btn btn-danger shadow-sm" data-dismiss="modal"  tabindex="3">Cancelar</button> #}
                <button id="modalInsertNewPaymentMethodButtonCancel" class="btn btn-danger shadow-sm" onclick="cancelInsertPaymentMethod()" style="float:right;"><span class="maintext"> Cancelar </span> <span class="shortcut"> (Esc) </span></button>
                <button id="modalInsertNewPaymentMethodButtonConfirm" class="btn btn-success shadow-sm" onclick="insertPaymentMethod($('#modalInsertNewPaymentMethodOptions').val(), $('#modalInsertNewPaymentMethodAmount').val())" style="float:right;"><span class="maintext"> Confirmar </span> <span class="shortcut"> (Enter) </span></button>
                {# <button id="modalInsertNewPaymentMethodButtonConfirm" type="button" class="btn btn-success shadow-sm" tabindex="4">Confirmar (Ins)</button> #}
            </div>
        </div>
    </div>
</div>
