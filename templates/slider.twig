<div class="modal fade" id="modalAccountState" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header background-template-color">
                <span class="modal-title text-template-color">Estado de cuenta</span>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-row">
                    <div class="form-group col">
                        <input id="inputPerson" type="text" class="form-control form-control-sm shadow-sm" list="listPeople" onkeypress="return keyPressModal(event, null, null)">
                        <datalist id="listPeople"></datalist>
                    </div>
                    <div class="form-group ">
                        <button class="btn btn-sm background-template-color2 tex-template-background" onclick="cleanInputsAccountState()" type="button"><i class="fas fa-eraser"></i></button>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label for="checkDateInitFromBeginning">Estado de cuenta completo</label>
                        <input type="checkbox" class="shadow-sm" id="checkDateInitFromBeginning" onchange="changeDateInitFromBeginning()" onkeypress="return keyPressModal(event, null, null)">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label for="inputDateInit">Desde</label>
                        <input type="date" class="form-control form-control-sm text-center shadow-sm" id="inputDateInit" onkeypress="return keyPressModal(event, null, null)">
                    </div>
                    <div class="form-group col">
                        <label for="inputDateEnding">Hasta</label>
                        <input type="date" class="form-control form-control-sm text-center shadow-sm" id="inputDateEnding" onkeypress="return keyPressModal(event, null, null)">
                    </div>
                </div>
                <div class="d-flex justify-content-center mt-3">
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="inputTypeCoinUYU" name="rd" class="custom-control-input" checked onkeypress="return keyPressModal(event, null, null)">
                        <label class="custom-control-label green" for="inputTypeCoinUYU">Pesos Uruguayos</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="inputTypeCoinUSD" name="rd" class="custom-control-input" onkeypress="return keyPressModal(event, null, null)">
                        <label class="custom-control-label green" for="inputTypeCoinUSD">Dolares</label>
                    </div>
                </div>
                <div id="containerClashCollectionClient" style="visibility: hidden;" class="d-flex justify-content-center mt-2">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="inputIncludeCashCollection">
                        <label class="form-check-label" for="flexCheckDefault">
                            Incluir contados pendientes
                        </label>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-danger shadow-sm" data-dismiss="modal">Cancelar</button>
                <button id="btnConfirmModalAccountState" class="btn btn-success text-white shadow-sm" onkeypress="return keyPressModal(event, null, null)">Confirmar</button>
            </div>
        </div>
    </div>
