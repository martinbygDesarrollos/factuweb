{% extends "base.twig" %}
{% block head %}
{% endblock %}
{% block content %}
<div class="d-flex justify-content-center">
	<div class="card shadow mt-4 mb-2 w-100">
		<div class="card-header d-flex justify-content-between background-template-color text-template-color font-italic">
			<h5>Contabilidad</h5>
		</div>
		<div class="card-body">
			<div id="" style="overflow-y:auto; min-height: 25vh; max-height: 75vh;">
				<table class="table table2">
					<thead class="background-template-color text-template-color">
						<tr>
							<th scope="col">Documento</th>
							<th scope="col" style="width:15%">Exportar</th>
						</tr>
					</thead>
					<tbody id="" href>
						<tr>
							<td scope="col">Memory - Ventas</td>
							<!--td scope="col"><button id="buttonExportDataAccounting" type="button" onclick="howmanyRowsExportAccData(1)" class="btn btn-sm background-template-color2 tex-template-background">Exportar</button></td-->
							<td><button id="btnOpenModalExportDataAccounting" type="button" class="btn btn-sm background-template-color2 text-template-background shadow m-1" data-toggle="modal" data-target="#modalDateToExportAccountingData" accesskey="r">Exportar</button></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<div class="modal fade" id="modalDateToExportAccountingData" tabindex="-1" role="dialog" >
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header background-template-color">
				<span class="modal-title text-template-color">Fecha</span>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div id="" class="modal-body">
				<div class="d-flex justify-content-center">
					<div class="form-row">
						<div class="col">
							<input type="date" class="form-control form-control-sm text-center shadow-sm" id="dateFromAccountingData" value="">
						</div>
						<div class="col">
							<input type="date" class="form-control form-control-sm text-center shadow-sm" id="dateToAccountingData" value="">
						</div>
					</div>
				</div>
			</div>
			<div class="modal-footer justify-content-between">
				<button type="button" class="btn btn-danger shadow-sm" data-dismiss="modal">Cancelar</button>
				<button id="buttonExportDataAccounting" type="button" onclick="howmanyRowsExportAccData(1)" class="btn btn-sm background-template-color2 tex-template-background">Confirmar</button>
			</div>
		</div>
	</div>
</div>

{%block script%}
<script type="text/javascript" src="{{ path_for('Start')}}scripts/accounting.js{{ versionerp }}"></script>
{% endblock %}
{% endblock %}